import java.util.*;

public class Plotter {
	void druckeWertetabelle(IFunktion f, double a, double b) {
		if (a > b) {
			double temp = b;
			b = a;
			a = temp;
		}
		System.out.println("x\tf(x)");
		while(a < b) {
			System.out.println(a + "\t" + f.evaluate(a));
			a += 1.0;
		}
	}
	
	public void druckeGraph(IFunktion f, double a, double b) {
		if (a > b) {
			double temp = b;
			b = a;
			a = temp;
		}
		while(a < b) {
			double value = f.evaluate(a);
			for (int i = 0; i < value; i++) {
				System.out.println(" ");
			}
			System.out.println("o");
			a += 1.0;
		}
	}
	
	public List<IFunktion> derivations(IFunktion f, int n) {
		for (int n = f; n >= 0; n --) {
			
		}
	}
}
